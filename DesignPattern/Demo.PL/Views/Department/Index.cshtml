
@model IEnumerable<Department>
@{
    ViewData["Title"] = "Index";
}

<h1>Departments</h1>
<br />
<a asp-action="Create" asp-controller = "Department" class="btn btn-primary" >Create New Department</a>
@if (Model.Count() > 0)
{
    <table class ="table table-striped">
        <thead>
            <tr>
              <th>@Html.DisplayNameFor(d=>d.Code) </th>
              <th>@Html.DisplayNameFor(d=>d.Name) </th>
              <th>@Html.DisplayNameFor(d=>d.DateOfCreation) </th>
              <th>Details</th>
              <th>UpDate</th>
              <th>Delete</th>
            </tr>
        </thead>
        <tbody>
         @foreach (var debartment in Model)
         {
             <tr>
                <td>@debartment.Code</td>
                <td>@debartment.Name</td>
                <td>@debartment.DateOfCreation</td>
                <td> 
                    <a asp-action ="Details" asp-controller = "Department" asp-route-id="@debartment.Id" class="btn btn-success " >Details</a>
                </td>
                <td> 
                    <a asp-action ="Edit" asp-controller = "Department" asp-route-id="@debartment.Id" class="btn btn-Warning " >Update</a>
                </td>
                <td> 
                    <a asp-action ="Delete" asp-controller = "Department" asp-route-id="@debartment.Id" class="btn btn-danger " >Delete</a>
                </td>
              </tr>
         }
        </tbody>
    </table>        
}else{
    <div class="my-3 alert alert-warning">
    <p>There no Departments here!!</p> 
    </div>
}



