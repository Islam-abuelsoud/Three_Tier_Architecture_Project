@model Department
@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>
<br />
<form asp-action="Edit" >
    <input hidden asp-for="Id"/>
    <div class="form-group">
        <label class=""  asp-for="Code"></label>
        <input class="form-control" asp-for="Code" />
        <span asp-validation-for="Code" class = "text-danger"></span>
    </div>
    <div class="form-group">
        <label class="" asp-for="Name"></label>
        <input class="form-control" asp-for="Name" />
        <span asp-validation-for="Name" class = "text-danger"></span>
    </div>
    <div class="form-group">
        <label class="" asp-for="DateOfCreation"></label>
        <input class="form-control" asp-for="DateOfCreation" />
        <span asp-validation-for="DateOfCreation" class = "text-danger"></span>
    </div>
    <input class="btn btn-primary" type="Submit" valeu = "Save" /> |
    <a asp-action="Index" asp-controller="Department"  class="btn btn-light">Back To List</a>
</form>



